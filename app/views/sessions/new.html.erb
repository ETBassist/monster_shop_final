<%= form_with url: login_path, class: 'form-horizontal', local: true do |f| %>
  <div class='form-group'>
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.email_field :email, id: :email, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.password_field :password, id: :password, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit 'Log In', class: 'btn btn-outline-dark' %>
<% end %>
